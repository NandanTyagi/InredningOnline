@model ProjectsViewModel
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="fixer">
    <div class="main-container">
        <h1 class="text-center">Ballong AB</h1>
        <h2 class="text-center">Edit</h2>

        <div class="project-holder">
            <form asp-action="EditMaterial" method="post">
                <div class="grid-header">
                    <h4 class="text-center">@Model.Project.Name</h4>
                    <h6 class="text-center">Designer: @Model.GetDesignerById(@Model.Project.DesignerId).Name</h6>
                    <hr>
                </div>
                <div class="grid-container-edit">
                    <div class="grid-item header-item"></div>
                    <div class="grid-item header-item">Material</div>
                    <div class="grid-item header-item">Supplier</div>
                    <div class="grid-item header-item">Amount</div>
                    <div class="grid-item header-item">Price</div>
                    <div class="grid-item header-item">Details</div>
                </div>

                
                    <div class="grid-container-edit">
                        <div class="grid-item "><input asp-for="@Model.Material.Id" type="hidden" value="@Model.Material.Id" contenteditable="false"></div>
                        <div class="grid-item "><input asp-for="@Model.Material.Name" type="text" value="@Model.Material.Name"></div>
                        <div class="grid-item"><input asp-for="@Model.Material.Supplier" type="text" value="@Model.Material.Supplier">
                        </div>
                        <div class="grid-item"><input asp-for="@Model.Material.Amount" type="number" value="@Model.Material.Amount">
                        </div>
                        <div class="grid-item"><input asp-for="@Model.Material.Price" type="number"
                                value="@Model.Material.Price"></div>
                        <div class="grid-item"><input asp-for="@Model.Material.Details" type="text"
                                value="@Model.Material.Details"><span class="grid-item"></div>
                        <div class="grid-item"><input type="submit" class="btn" value="Save"> </div>

                    </div>
                
            </form>
            <hr>
            <div class="total">Total: @((@Model.Material.Price * @Model.Material.Amount).ToString("c0"))</div>
        </div>




