<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ballong AB</title>
    <script src="https://kit.fontawesome.com/3bacd275d1.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    
        <header class="backwhite">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light text-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand text-danger" asp-area="" asp-action="Index">Ballong AB</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item ">
                                <a class="nav-link text-dark add" asp-area="" asp-action="CreateProject">New Project</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark add" asp-area="" asp-controller="Projects"
                                    asp-action="Index">My Projects</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark add" asp-area="" asp-controller="Projects"
                                    asp-action="AllProjects">All Projects</a>
                            </li>

                            <li class="nav-item aside">
                                <partial name="_LoginPartial" />
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted background">
            <div class="container">
                &copy; 2020 - Ballong AB - <a asp-area="" asp-action="Index">My Projects</a>
            </div>
        </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
